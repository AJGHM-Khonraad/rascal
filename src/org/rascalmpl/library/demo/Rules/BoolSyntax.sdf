module demo/Rules/BoolSyntax

%% Concrete syntax for a small language of Booleans.
exports 
  imports basic/Whitespace
  sorts Bool
  context-free start-symbols Bool

  context-free syntax
    "btrue"        -> Bool
    "bfalse"       -> Bool
    Bool "&" Bool  -> Bool {left}
    Bool "|" Bool  -> Bool {right}
    "("Bool ")" -> Bool {bracket}
