data ChartProperty = 
     areaPlot()
   | chartSize(num w, num h) 
   | curvePlot () 
   | horizontal() 
   | linePlot()  
   | ring(num h) 
   | stackedBars()  
   | subTitle(str txt)
   | vertical()  
   | xLabel(str txt)
   | yLabel(str txt) 
   ;
