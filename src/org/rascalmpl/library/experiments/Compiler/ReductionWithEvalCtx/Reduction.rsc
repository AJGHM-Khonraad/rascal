module experiments::Compiler::ReductionWithEvalCtx::Reduction

import experiments::Compiler::ReductionWithEvalCtx::AST;

@doc{Reduction rules}
public Exp step( add(number(n1), number(n2)) ) = number(n1 + n2);
public Exp step( eq(number(n1), number(n2)) ) = (n1 == n2) ? Exp::\true() : Exp::\false();

public Exp step( ifelse(Exp::\true(), Exp exp2, Exp exp3) ) = exp2;
public Exp step( ifelse(Exp::\false(), Exp exp2, Exp exp3) ) = exp3; 
