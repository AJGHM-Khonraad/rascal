    },
    {
      "name": "stats",
      "source": "table",
      "transform": [
        {"type": "facet", "keys": ["data.c"]},
        {"type": "stats", "value": "data.y"}
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "ordinal",
      "range": "width",
      "domain": {"data": "table", "field": "data.c"},
      "sort": true
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {"data": "stats", "field": "sum"}
