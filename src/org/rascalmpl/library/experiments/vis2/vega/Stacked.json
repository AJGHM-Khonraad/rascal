          {"type": "stack", "point": "data.c", "height": "data.y"}
        ]
      },
      "marks": [
        {
          "type": "rect",
          "properties": {
            "enter": {
              "x": {"scale": "x", "field": "data.c"},
              "width": {"scale": "x", "band": true, "offset": -1},
